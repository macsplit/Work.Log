@{
    ViewData["Title"] = "Cloud Sync";
}

<div class="sync-page">
    <h1>Cloud Sync</h1>
    <p class="subtitle">Sync your work sessions and tags to Amazon DynamoDB</p>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning">@TempData["Warning"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">@TempData["Error"]</div>
    }

    <div class="sync-status-card">
        <h2>Sync Status</h2>

        @if ((bool)ViewBag.IsConfigured)
        {
            <div class="status-item">
                <span class="status-label">Status:</span>
                <span class="status-value status-configured">Configured</span>
            </div>
            <div class="status-item">
                <span class="status-label">Profile ID:</span>
                <span class="status-value">@ViewBag.ProfileId</span>
            </div>
            <div class="status-item">
                <span class="status-label">AWS Region:</span>
                <span class="status-value">@ViewBag.AwsRegion</span>
            </div>
            <div class="status-item">
                <span class="status-label">Last Sync:</span>
                <span class="status-value">
                    @if (ViewBag.LastSync != null)
                    {
                        @(((DateTime)ViewBag.LastSync).ToString("yyyy-MM-dd HH:mm:ss UTC"))
                    }
                    else
                    {
                        <em>Never synced</em>
                    }
                </span>
            </div>

            <div class="sync-actions">
                <form asp-action="Sync" method="post" class="inline-form">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary btn-lg">Sync Now</button>
                </form>
                <form asp-action="TestConnection" method="post" class="inline-form">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-secondary">Test Connection</button>
                </form>
                <a asp-action="Configure" class="btn btn-outline">Edit Configuration</a>
            </div>
        }
        else
        {
            <div class="status-item">
                <span class="status-label">Status:</span>
                <span class="status-value status-not-configured">Not Configured</span>
            </div>
            <p class="help-text">Configure your AWS credentials to enable cloud sync.</p>
            <div class="sync-actions">
                <a asp-action="Configure" class="btn btn-primary">Configure Sync</a>
            </div>
        }
    </div>

    <div class="sync-info">
        <h2>About Cloud Sync</h2>
        <ul>
            <li>Sync keeps your work sessions and tags synchronized across devices</li>
            <li>Uses Amazon DynamoDB for reliable cloud storage</li>
            <li>Conflict resolution uses timestamps - the most recent change wins</li>
            <li>Deleted items are soft-deleted to properly sync deletions</li>
        </ul>
    </div>
</div>

<style>
    .sync-page {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }
    .sync-page h1 {
        margin-bottom: 0.5rem;
    }
    .subtitle {
        color: var(--text-muted);
        margin-bottom: 2rem;
    }
    .sync-status-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }
    .sync-status-card h2 {
        margin-top: 0;
        margin-bottom: 1rem;
        font-size: 1.25rem;
    }
    .status-item {
        display: flex;
        margin-bottom: 0.75rem;
    }
    .status-label {
        font-weight: 600;
        min-width: 120px;
    }
    .status-configured {
        color: var(--success-color, #22c55e);
    }
    .status-not-configured {
        color: var(--warning-color, #f59e0b);
    }
    .help-text {
        color: var(--text-muted);
        margin: 1rem 0;
    }
    .sync-actions {
        margin-top: 1.5rem;
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }
    .inline-form {
        display: inline;
    }
    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
    }
    .btn-outline {
        background: transparent;
        border: 1px solid var(--border-color);
    }
    .sync-info {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 1.5rem;
    }
    .sync-info h2 {
        margin-top: 0;
        font-size: 1.25rem;
    }
    .sync-info ul {
        margin: 0;
        padding-left: 1.25rem;
    }
    .sync-info li {
        margin-bottom: 0.5rem;
    }
    .alert {
        padding: 1rem;
        border-radius: 4px;
        margin-bottom: 1rem;
    }
    .alert-success {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        color: #22c55e;
    }
    .alert-warning {
        background: rgba(245, 158, 11, 0.1);
        border: 1px solid rgba(245, 158, 11, 0.3);
        color: #f59e0b;
    }
    .alert-error {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #ef4444;
    }
</style>
