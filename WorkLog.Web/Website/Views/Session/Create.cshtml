@model SessionEditViewModel
@{
    ViewData["Title"] = "New Session";
}

<div class="form-container">
    <div class="form-card">
        <h1>New Work Session</h1>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-group">
                <label asp-for="SessionDate">Date</label>
                <input asp-for="SessionDate" type="date" class="form-control" />
                <span asp-validation-for="SessionDate" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="TimeHours">Time (hours)</label>
                <select asp-for="TimeHours" class="form-control">
                    @foreach (var option in SessionEditViewModel.TimeOptions)
                    {
                        <option value="@option.Value">@option.Label</option>
                    }
                </select>
                <span asp-validation-for="TimeHours" class="validation-message"></span>
                <small class="form-hint">Select time in 0.5 hour increments</small>
            </div>

            <div class="form-group">
                <label asp-for="TagId">Tag (optional)</label>
                <div class="tag-input-row">
                    <select asp-for="TagId" asp-items="Model.AvailableTags" class="form-control">
                        <option value="">No tag</option>
                    </select>
                    <a asp-controller="Tag" asp-action="Index" class="btn btn-sm btn-secondary">Manage Tags</a>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description *</label>
                <textarea asp-for="Description" class="form-control" rows="4"
                          placeholder="Describe the work you did..."></textarea>
                <span asp-validation-for="Description" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Notes">Notes (optional)</label>
                <textarea asp-for="Notes" class="form-control" rows="3"
                          placeholder="Additional notes..."></textarea>
                <span asp-validation-for="Notes" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="NextPlannedStage">Next Planned Stage (optional)</label>
                <textarea asp-for="NextPlannedStage" class="form-control" rows="2"
                          placeholder="What's planned next..."></textarea>
                <span asp-validation-for="NextPlannedStage" class="validation-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save Session</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
