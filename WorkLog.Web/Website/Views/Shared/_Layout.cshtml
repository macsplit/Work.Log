@using System.Security.Claims
@using WorkLog.Domain.Services
@inject IAuthService AuthService

@{
    string? userTheme = null;
    if (User.Identity?.IsAuthenticated == true)
    {
        var userIdClaim = User.FindFirst(ClaimTypes.NameIdentifier);
        if (userIdClaim != null && int.TryParse(userIdClaim.Value, out int userId))
        {
            userTheme = await AuthService.GetUserTheme(userId);
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light dark" />
    <title>@ViewData["Title"] - Work Log</title>
    <!-- Critical CSS to prevent dark mode flash -->
    <style>
        :root { --bg-color: #f9fafb; --card-bg: #ffffff; }
        @@media (prefers-color-scheme: dark) {
            :root { --bg-color: #111827; --card-bg: #1f2937; }
        }
        html, body { background-color: var(--bg-color); }
    </style>
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/lib/highlightjs/github.min.css" />
    <link rel="stylesheet" href="/lib/highlightjs/github-dark.min.css" media="(prefers-color-scheme: dark)" />
</head>
<body data-theme="@(userTheme ?? "")">
    <header class="site-header">
        <nav class="navbar">
            <a class="navbar-brand" href="/">Work Log</a>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="nav-links">
                    <a asp-controller="Tag" asp-action="Index" class="nav-link">Tags</a>
                    <a asp-controller="Sync" asp-action="Index" class="nav-link">Sync</a>
                </div>
                <div class="nav-user">
                    <span>@User.Identity.Name</span>
                    <select id="theme-selector" class="theme-selector" onchange="changeTheme(this.value)">
                        <option value="">Auto</option>
                        <option value="light">Light</option>
                        <option value="dark">Dark</option>
                        <option value="warm-neutral">Warm Neutral</option>
                        <option value="cool-blush">Cool Blush</option>
                        <option value="midnight">Midnight</option>
                        <option value="sage">Sage</option>
                        <option value="twilight">Twilight</option>
                    </select>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="logout-form">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link">Logout</button>
                    </form>
                </div>
            }
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <p>&copy; @DateTime.Now.Year Work Log</p>
    </footer>

    <!-- Modal container -->
    <div id="modal-backdrop" class="modal-backdrop" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-header">
                <h2 id="modal-title">Modal</h2>
                <button type="button" class="modal-close" onclick="closeModal()">&times;</button>
            </div>
            <div id="modal-content" class="modal-content">
            </div>
        </div>
    </div>

    <script src="/lib/markdown-it/markdown-it.min.js"></script>
    <script src="/lib/highlightjs/highlight.min.js"></script>
    <script src="/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
