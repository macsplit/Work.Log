{
    "app-id": "work.worklog.desktop",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-25.08",
    "sdk": "org.kde.Sdk",
    "command": "worklog-desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=xdg-data/WorkLog:create",
        "--filesystem=xdg-config/WorkLog:create"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "worklog-desktop",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DENABLE_SYNC=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/macsplit/Work.Log.git",
                    "branch": "main"
                }
            ],
            "post-install": [
                "install -Dm644 WorkLog.Desktop/work.worklog.desktop.desktop ${FLATPAK_DEST}/share/applications/work.worklog.desktop.desktop",
                "install -Dm644 WorkLog.Desktop/work.worklog.desktop.metainfo.xml ${FLATPAK_DEST}/share/metainfo/work.worklog.desktop.metainfo.xml",
                "install -Dm644 WorkLog.Desktop/work.worklog.desktop.svg ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/work.worklog.desktop.svg"
            ]
        }
    ]
}
